import re
import os

def check_password_strength(password):
    """
    Checks the strength of a password based on various criteria.
    Returns a strength score out of 10 and suggestions.
    """
    score = 0
    suggestions = []

    # Check length (up to 3 points)
    if len(password) >= 16:
        score += 3
    elif len(password) >= 12:
        score += 2
    elif len(password) >= 8:
        score += 1
    else:
        suggestions.append("Password should be at least 8 characters long.")

    # Check uppercase (1 point)
    if re.search(r'[A-Z]', password):
        score += 1
    else:
        suggestions.append("Include at least one uppercase letter.")

    # Check lowercase (1 point)
    if re.search(r'[a-z]', password):
        score += 1
    else:
        suggestions.append("Include at least one lowercase letter.")

    # Check digits (1 point)
    if re.search(r'\d', password):
        score += 1
    else:
        suggestions.append("Include at least one digit.")

    # Check symbols (1 point)
    if re.search(r'[!@#$%^&*()_+\-=\[\]{};\':"\\|,.<>\/?]', password):
        score += 1
    else:
        suggestions.append("Include at least one special symbol.")

    # Check for no common words (1 point)
    common_words = ["password", "123456", "qwerty", "admin", "letmein"]
    if not any(word in password.lower() for word in common_words):
        score += 1
    else:
        suggestions.append("Avoid common words or sequences.")

    # Determine strength
    if score >= 8:
        strength = "Very Strong"
    elif score >= 6:
        strength = "Strong"
    elif score >= 4:
        strength = "Medium"
    elif score >= 2:
        strength = "Weak"
    else:
        strength = "Very Weak"

    return strength, score, suggestions

def export_results(password, strength, score, suggestions, filename="password_check_results.txt"):
    """
    Exports the password check results to a file.
    """
    with open(filename, 'w') as f:
        f.write(f"Password: {password}\n")
        f.write(f"Strength: {strength}\n")
        f.write(f"Score: {score}/10\n")
        f.write("Suggestions:\n")
        for suggestion in suggestions:
            f.write(f"- {suggestion}\n")
    print(f"Results exported to {filename}")

def main():
    print("Password Strength Checker")
    password = input("Enter a password to check: ")

    strength, score, suggestions = check_password_strength(password)

    print(f"\nPassword Strength: {strength}")
    print(f"Score: {score}/10")

    if suggestions:
        print("Suggestions to improve:")
        for suggestion in suggestions:
            print(f"- {suggestion}")
    else:
        print("Your password is strong!")

    # Bonus: Export to file
    export_choice = input("\nDo you want to export the results to a file? (y/n): ").lower()
    if export_choice == 'y':
        filename = input("Enter filename (default: password_check_results.txt): ").strip()
        if not filename:
            filename = "password_check_results.txt"
        export_results(password, strength, score, suggestions, filename)

if __name__ == "__main__":
    main()
